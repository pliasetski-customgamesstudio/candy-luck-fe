{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "dom"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "declaration": true,
  "include": ["src/**/*.ts", "webpack.config.ts", "../packages/syd/src/global.d.ts", "../packages/shared/src/global.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
