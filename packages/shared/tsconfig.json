{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es2022",
    "module": "esnext",
    "rootDir": "..",
    "lib": ["es2022", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "declaration": true,
  "include": ["src/**/*.ts", "webpack.config.ts", "../syd/src/global.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
